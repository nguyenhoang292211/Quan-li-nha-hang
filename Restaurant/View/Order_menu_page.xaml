                <Style TargetType="Border">
                    <Setter Property="Background">
                        <Setter.Value>
                            <LinearGradientBrush  EndPoint="0.504,1.5" StartPoint="0.504,0.03">
                                <GradientStop Color="Navy" Offset="0.15"/>
                                <GradientStop Color="#B5FFFF" Offset="0"/>
                            </LinearGradientBrush>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="Width" Value="100"/>
                    <Setter Property="Height" Value="50"/>
                    <Setter Property="CornerRadius" Value="10"/>
                    <Setter Property="VerticalAlignment" Value="Center"/>
                    <Setter Property="HorizontalAlignment" Value="Left"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#0683B9"></Setter>
                            <Setter Property="Tag" Value="Kapan"></Setter>

                        </Trigger>
                    </Style.Triggers>
                </Style>

            </DockPanel.Resources>
            <Border  Margin="10 0 10 0" Width="130">

                <Button x:Name="btnenter" 
                        Style="{StaticResource MaterialDesignRaisedDarkButton}"
                        Background="Transparent"
                        Foreground="White"
                        Height="50"
                        
                        BorderThickness="0"
                        Click="Btnenter_Click">
                    Vào bếp
                </Button>
                <Border.Effect >
                    <DropShadowEffect
                                    Color="Gray"
                                    Direction="270"
                                    ShadowDepth="5"
                                    BlurRadius="8"/>
                </Border.Effect>
            </Border>
            <Border 
                        Width="130"                       
                        Margin="10 0">
                <Button x:Name="btncomeback"
                         Style="{StaticResource MaterialDesignRaisedDarkButton}"
                        Background="Transparent"
                        Foreground="White"
                        BorderThickness="0"
                        Height="50"
                        Width="100"
                        ToolTip="Resource name: MaterialDesignRaisedLightDarkButton"
                        Click="Btncomeback_Click" 
                         >
                    Trở lại
                </Button>
                <Border.Effect>
                    <DropShadowEffect
                                    Color="Gray"
                                    Direction="270"
                                    ShadowDepth="5"
                                    BlurRadius="8"/>
                </Border.Effect>
            </Border>

            <Border 
                        Width="150"                     
                        Margin="5 0">
                <Button x:Name="btn_pay"                        
                        Background="Transparent"
                        Foreground="White"
                        BorderThickness="0"
                        Height="50"
                        ToolTip="Resource name: MaterialDesignRaisedLightDarkButton"
                        Click="Btn_pay_Click"
                        HorizontalAlignment="Center" 
                        >
                    Tạo bill
                </Button>
                <Border.Effect>
                    <DropShadowEffect
                                    Color="Gray"
                                    Direction="270"
                                    ShadowDepth="5"
                                    BlurRadius="8"/>
                </Border.Effect>
            </Border>

        </DockPanel>

        <Button Grid.Column="1"
                Visibility="Hidden"
                VerticalAlignment="Top" 
                IsEnabled="True"
                Margin="10,563,10,0"
                Foreground="White"
                FontFamily="Lucida Sans Unicode"
                FontSize="18"
                Name="btn_thanhtoan"
                Background="CadetBlue" FontWeight="Bold"
                Click="Btn_thanhtoan_Click"
                >THANH TOÁN</Button>

    </Grid>
