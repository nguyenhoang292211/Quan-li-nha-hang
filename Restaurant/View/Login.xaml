        <Border Background="AntiqueWhite"
                BorderBrush="#619196"
                BorderThickness="7" 
                CornerRadius="10 10 10 10" Margin="347,100,47.333,69.667">
            <Grid HorizontalAlignment="Left" 
                  Height="237" 
                  Margin="0.333,0.333,-0.333,0" 
                  VerticalAlignment="Top" 
                  Width="386" 
